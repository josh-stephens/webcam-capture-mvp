# Webcam Capture MVP - Environment Variables Example
#
# Copy this file to .env and modify the values for your environment.
# These variables override the default configuration.

# Capture Device Configuration
WEBCAM_VIDEO_DEVICE="USB Camera"
WEBCAM_AUDIO_DEVICE="Microphone"
WEBCAM_CAPTURE_QUALITY="medium"

# Storage Configuration  
WEBCAM_ARCHIVE_PATH="C:\\archive"
WEBCAM_MAX_DAILY_SIZE_GB=10
WEBCAM_RETENTION_DAYS=30

# Audio Processing
WEBCAM_VAD_THRESHOLD=0.5
WEBCAM_WHISPER_MODEL="base"
WEBCAM_BUFFER_DURATION_SEC=30

# System Settings
WEBCAM_LOG_LEVEL="INFO"

# API Configuration
WEBCAM_API_ENABLED=true
WEBCAM_API_HOST="127.0.0.1"
WEBCAM_API_PORT=8080

# Agent Communication
WEBCAM_SYL_ENABLED=true
WEBCAM_SYL_ENDPOINT="http://localhost:8000"
WEBCAM_SYL_API_KEY=""

# Development/Debug Settings
WEBCAM_SAVE_RAW_AUDIO=false
WEBCAM_VERBOSE_LOGGING=false
WEBCAM_USE_TEST_DEVICES=false